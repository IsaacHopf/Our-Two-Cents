<MudSimpleTable Elevation="0" Hover="true" Dense="true" Bordered="true">
    <thead>
    <tr>
        <th>Categories</th>
        <th>Total Amount</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var grouping in Budget.Expenses.OrderBy(x => x.Category.Name).GroupBy(expense => expense.Category.Name))
    {
        <tr>
            <td>
                <MudStack Row="true" AlignItems="AlignItems.Center">
                    <div style="background-color: @grouping.First().Category.Color; width: 1rem; height: 1rem;" class="rounded"></div>
                    <span>@grouping.Key</span>
                </MudStack>
            </td>
            <td>@grouping.Sum(x => x.Amount).ToString("C")</td>
        </tr>
    }
    </tbody>
</MudSimpleTable>

@code {

    [Parameter] public required Budget Budget { get; set; }

}