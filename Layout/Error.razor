<MudStack Row Spacing="2" AlignItems="AlignItems.Center">
    <MudIcon Icon="@Icons.Material.Rounded.Error" Color="Color.Error" Size="Size.Large"/>
    <MudText Typo="@Typo.h5" Color="Color.Error">An error occurred.</MudText>
</MudStack>

@if (Exception is not null)
{
    <pre class="mt-3 overflow-auto">@Exception</pre>
}

@if (ErrorBoundary is not null)
{
    <MudButton OnClick="@ErrorBoundary.Recover" Icon="@Icons.Material.Rounded.Refresh" Variant="Variant.Filled" Color="Color.Secondary">
        Recover
    </MudButton>
}

@code {
    [Parameter] public Exception? Exception { get; set; }
    [Parameter] public ErrorBoundary? ErrorBoundary { get; set; }
}