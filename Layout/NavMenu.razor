    {
        <NavMenuItem Href="/reminders" Icon="@Icons.Material.Rounded.Notifications" Text="Reminders"/>
    }
    <NavMenuItem Href="/analytics" Icon="@Icons.Material.Rounded.CollectionsBookmark" Text="Analytics"/>
</MudNavMenu>